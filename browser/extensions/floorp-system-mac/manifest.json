{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "Floorp のシステムが含まれています。このアドオンは削除・停止ができません。",
  "version": "1.0",
  "homepage_url": "https://ablaze.one",
  "default_locale": "en",
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "sessions",
    "storage",
    "clipboardWrite",
    "search",
    "activeTab",
    "browserSettings",
    "mozillaAddons",
    "about:*",
    "about:reader*",
    "downloads"
  ],
  "experiment_apis": {
    "aboutConfigPrefs": {
        "schema": "API/aboutConfigPrefs.json",
        "parent": {
            "scopes": ["addon_parent"],
            "script": "API/aboutConfigPrefs.js",
            "paths": [["aboutConfigPrefs"]]
        }
    },
    "BrowserInfo": {
      "schema": "API/BrowserInfo.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "API/BrowserInfo.js",
        "paths": [["BrowserInfo"]]
      }
   }
  },
  "browser_action": {
		"default_icon":  "icons/floorp.png",
		"default_title": "check for Update",
		"browser_style":  true
	},
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/icon.png",
    "default_popup": "qr-code/popup.html",
    "show_matches": [
      "<all_urls>"
    ]
  },
  "background": {
    "scripts": ["background-script.js", "update.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["webcompat/fix-youtube-comment.css"], "js":["webcompat/fix-youtube-comment.js"]
    }
  ],
   "applications": {
     "gecko": {
      "id": "floorp-system@floorp.ablaze.one"
    }
  }
}